extends layout

block content
  .d-flex.justify-content-center
    form(action="/register" method="post")
      p Welcome to #{title}
      br
      div.form-group
          label(for='register_name') UserName :
          input#register_name.form-control(type='text', placeholder='UserName' name='username')
      div.form-group
          label(for='register_pwd') Password:
          input#register_pwd.form-control(type='password', placeholder='Password' name='password')
      div.form-group
          label(for='register_pwd2') Confirm Password:
          input#register_pwd2.form-control(type='password', placeholder='Password' name='password2')
      button.btn.btn-primary(type='submit') Submit
